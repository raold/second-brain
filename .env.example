# Second Brain v3.0.0 - Environment Configuration
# Copy this to .env and adjust values for your environment

# Application
APP_ENV=development
APP_PORT=8000
VERSION=3.0.0
BUILD_TARGET=runtime  # runtime|development

# Database
DB_PASSWORD=changeme
DB_PORT=5432
DB_REPLICATION_MODE=master
DB_REPLICATION_PASSWORD=changeme

# Cache
REDIS_PORT=6379
REDIS_PASSWORD=

# Message Queue
RABBITMQ_PASSWORD=changeme
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Observability
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme
LOKI_PORT=3100

# Vector Database
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Federation (Future)
FEDERATION_ENABLED=false
NODE_ID=node-001
CLUSTER_DISCOVERY=dns

# OpenAI (Optional)
OPENAI_API_KEY=

# Anthropic (Optional)
ANTHROPIC_API_KEY=

# Scaling
APP_REPLICAS=1

# Security
JWT_SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# CI/CD Configuration
CI_MODE=false
CI_STAGE=development
CI_REPORT_DIR=ci_reports
CI_TIMEOUT=1800
CI_MAX_WORKERS=4
CI_FAIL_FAST=false
CI_VERBOSE=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/secondbrain_test
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_WORKERS=auto
COVERAGE_THRESHOLD=80
TEST_TIMEOUT=300

# Performance Testing
LOAD_TEST_DURATION=60
LOAD_TEST_USERS=10
LOAD_TEST_SPAWN_RATE=2
PERFORMANCE_BASELINE_FILE=performance_baseline.json

# Security Scanning
BANDIT_CONFIG_FILE=bandit.yaml
SAFETY_DB_PATH=safety_db
SEMGREP_CONFIG=auto

# License Compliance
LICENSE_ALLOWLIST=MIT,Apache-2.0,BSD-3-Clause,BSD-2-Clause
LICENSE_DENYLIST=GPL-3.0,AGPL-3.0

# Monitoring & Reporting
METRICS_ENABLED=true
PROMETHEUS_PUSHGATEWAY_URL=
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# Docker Testing
DOCKER_TEST_NETWORK=secondbrain-test
DOCKER_TEST_VOLUMES=false