{
  "cleanupPeriodDays": 30,
  "env": {
    "PYTHONPATH": ".",
    "SECOND_BRAIN_ENV": "development",
    "CLAUDE_CODE_AUTONOMOUS": "true"
  },
  "permissions": {
    "allow": [
      "Bash(**)",
      "Bash(make status:*)",
      "Bash(wsl:*)",
      "Bash(docker logs:*)",
      "Bash(docker restart:*)",
      "Bash(timeout 5 docker logs secondbrain-app --tail 30 -f)",
      "Bash(curl:*)",
      "Bash(timeout 3 docker logs secondbrain-app --tail 20 -f)",
      "Bash(git add:*)",
      "Bash(git rm:*)",
      "Bash(rm:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(cp:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(sed:*)",
      "Bash(git checkout:*)",
      "Bash(python scripts/validate_claude_settings.py:*)",
      "Bash(git tag:*)",
      "Bash(python:*)",
      "Bash(mv:*)",
      "Bash(pip install:*)",
      "Bash(set GITHUB_ACTIONS=true)",
      "Bash(set CI=true)"
    ],
    "deny": []
  }
}