{
  "permissions": {
    "allow": [
      "Bash(docker logs:*)"
    ],
    "deny": []
  },
  "env": {
    "PYTHONPATH": "${workspaceRoot}",
    "SECOND_BRAIN_ENV": "development",
    "CLAUDE_CODE_AUTONOMOUS": "true"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tools": [
            "Bash"
          ]
        },
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ“ Command completed'"
          }
        ]
      }
    ]
  },
  "cleanupPeriodDays": 30
}