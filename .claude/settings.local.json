{
  "cleanupPeriodDays": 30,
  "env": {
    "PYTHONPATH": ".",
    "SECOND_BRAIN_ENV": "development",
    "CLAUDE_CODE_AUTONOMOUS": "true"
  },
  "permissions": {
    "allow": [
      "Bash(**)",
      "Bash(make status:*)",
      "Bash(wsl:*)",
      "Bash(docker logs:*)",
      "Bash(docker restart:*)",
      "Bash(timeout 5 docker logs secondbrain-app --tail 30 -f)",
      "Bash(curl:*)",
      "Bash(timeout 3 docker logs secondbrain-app --tail 20 -f)",
      "Bash(git add:*)"
    ],
    "deny": []
  }
}