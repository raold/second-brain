# Second Brain v3.0.0 - Development Environment

# Database
DATABASE_URL=postgresql://secondbrain:changeme@localhost:5432/secondbrain
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# RabbitMQ (when you add it)
RABBITMQ_URL=amqp://secondbrain:changeme@localhost:5672/

# MinIO (when you add it)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=secondbrain
MINIO_SECURE=false

# OpenAI
OPENAI_API_KEY=your-openai-key-here

# Security
JWT_SECRET_KEY=development-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600

# Application
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=DEBUG

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Features
USE_MOCK_DATABASE=false
USE_MOCK_OPENAI=false
FEATURE_SESSIONS_ENABLED=true
FEATURE_ATTACHMENTS_ENABLED=true